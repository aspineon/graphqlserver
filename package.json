{
  "name": "gql",
  "version": "1.0.0",
  "description": "Loopback 4 GraphQL server that supports schema mutation on the fly",
  "keywords": [
    "loopback-application",
    "loopback"
  ],
  "main": "index.js",
  "engines": {
    "node": ">=8.9"
  },
  "scripts": {
    "build": "lb-tsc",
    "build:watch": "lb-tsc --watch",
    "clean": "lb-clean dist *.tsbuildinfo",
    "lint": "npm run prettier:check && npm run eslint",
    "lint:fix": "npm run eslint:fix && npm run prettier:fix",
    "prettier:cli": "lb-prettier \"**/*.ts\" \"**/*.js\"",
    "prettier:check": "npm run prettier:cli -- -l",
    "prettier:fix": "npm run prettier:cli -- --write",
    "eslint": "lb-eslint --report-unused-disable-directives .",
    "eslint:fix": "npm run eslint -- --fix",
    "pretest": "npm run clean && npm run build",
    "test": "lb-mocha --allow-console-logs \"dist/__tests__\"",
    "posttest": "npm run lint",
    "test:dev": "lb-mocha --allow-console-logs dist/__tests__/**/*.js && npm run posttest",
    "docker:build": "docker build -t gql .",
    "docker:run": "docker run -p 3000:3000 -d gql",
    "migrate": "node ./dist/migrate",
    "prestart": "npm run build",
    "start": "node -r source-map-support/register .",
    "prepublishOnly": "npm run test"
  },
  "repository": {
    "type": "git"
  },
  "author": "",
  "license": "",
  "files": [
    "README.md",
    "index.js",
    "index.d.ts",
    "dist",
    "src",
    "!*/__tests__"
  ],
  "dependencies": {
    "@hapi/joi": "^16.1.8",
    "@loopback/boot": "^1.6.0",
    "@loopback/context": "^1.25.0",
    "@loopback/core": "^1.12.0",
    "@loopback/openapi-v3": "^1.10.3",
    "@loopback/repository": "^1.16.0",
    "@loopback/rest": "^1.25.0",
    "@loopback/rest-explorer": "^1.4.6",
    "@loopback/service-proxy": "^1.3.13",
    "@types/hapi__joi": "^16.0.4",
    "@types/yargs": "^13.0.3",
    "body-parser": "^1.19.0",
    "cookie-session": "^1.3.3",
    "csurf": "^1.10.0",
    "express": "^4.17.1",
    "express-graphql": "^0.9.0",
    "graphql": "^14.5.8",
    "graphql-disable-introspection": "^1.1.0",
    "graphql-tools": "^4.0.6",
    "helmet": "^3.21.2",
    "lodash-es": "^4.17.15",
    "openapi-enforcer": "^1.6.4",
    "openapi-to-graphql": "^1.7.0",
    "p-event": "^4.1.0",
    "request": "^2.88.0",
    "request-promise-native": "^1.0.8",
    "vuln-regex-detector": "^1.3.0",
    "yaml": "^1.7.2",
    "yargs": "^15.0.2"
  },
  "devDependencies": {
    "@loopback/build": "^2.1.0",
    "@loopback/eslint-config": "^5.0.0",
    "@loopback/testlab": "^1.10.0",
    "@types/express": "^4.17.2",
    "@types/graphql": "^14.5.0",
    "@types/lodash-es": "^4.17.3",
    "@types/node": "^12.12.17",
    "@types/request": "^2.48.3",
    "@types/request-promise-native": "^1.0.17",
    "@types/yaml": "^1.2.0",
    "@typescript-eslint/eslint-plugin": "^2.11.0",
    "@typescript-eslint/parser": "^2.11.0",
    "eslint": "^6.7.2",
    "eslint-config-prettier": "^6.5.0",
    "eslint-plugin-eslint-plugin": "^2.1.0",
    "eslint-plugin-mocha": "^6.2.1",
    "source-map-support": "^0.5.16",
    "typescript": "^3.7.3"
  }
}
